<<

func (self *StubImpl) <func.name>Stub(stub *shim.ChaincodeStub, _params string) ([]byte, error) {

     params := &<func.param>{}
     err := proto.UnmarshalText(_params, params)
     if (err != nil) {
        return nil, err
     }

     <if(func.rettype)>result, err := <else>err = <endif>self.Interface.<func.name>(stub, params)
     if (err != nil) {
        return nil, err
     }

     <if(func.rettype)>
     _result := proto.MarshalTextString(result)
     if (err != nil) {
          return nil, err
     }
     return []byte(_result), nil
     <else>
     return nil, nil
     <endif>
}

>>

